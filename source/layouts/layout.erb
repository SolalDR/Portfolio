<!doctype html>
<html>
  <head>
    <meta charset="utf-8">
    <meta http-equiv="x-ua-compatible" content="ie=edge">
    <meta name="viewport"
          content="width=device-width, initial-scale=1, shrink-to-fit=no">
    <!-- Use the title from a page's frontmatter if it has one -->
    <meta name="description" content="<%= current_page.data.description %>">

    <link href="https://fonts.googleapis.com/css?family=Gudea:700" rel="stylesheet">
    <title><%= current_page.data.title || "Solal Dussout-Revel" %></title>
    <%= stylesheet_link_tag "site" %>
    <%= javascript_include_tag "site" %>
  </head>
  <body >
  
    <div id="bg">
      <canvas id="bg-canvas"></canvas>
    </div>

    <div id="cursor" class="cursor">
      <!-- <div class="cursor__content"></div> -->
    </div>
  
    <div id="body" data-slug="<%= current_page.data.slug %>">
      <%= yield %>  
    </div>
  </body>
</html>
